---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

interface Props {
   title: string;
   redirNavigation: boolean;
}

const { title, redirNavigation } = Astro.props;

const baseEnvValue = import.meta.env.BASE_URL;
const baseUrl = baseEnvValue == "/" ? "" : baseEnvValue;
// console.log("layout info:");
// console.log(baseUrl);
---

<!doctype html>
<html lang='en'>
   <head>
      <meta charset='UTF-8' />
      <meta name='description' content='Astro description' />
      <meta name='viewport' content='width=device-width' />
      <!-- <link rel='icon' type='image/svg+xml' href='/favicon.svg' /> -->
      <link rel='icon' type='image/x-icon' href={baseUrl + "/favicon.ico"} />
      <!-- <link rel='icon' type='image/x-icon' href='/favicon.ico' /> -->
      <meta name='generator' content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body>
      <Nav redirNavigation={redirNavigation} />
      <slot />
      <Footer />
   </body>
</html>
